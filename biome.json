{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!**/node_modules/**", "!**/dist/**"]
  },
  "assist": {
    "actions": {
      "source": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "formatWithErrors": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "domains": {
      "project": "all",
      "react": "all",
      "test": "all"
    },
    "rules": {}
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "css": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
